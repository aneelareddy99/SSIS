
CREATE DATABASE  DW_CDC_DESTINATION
GO

USE DW_CDC_DESTINATION
GO

CREATE TABLE dimPRODUCT_TABLE
(
ProductID INT PRIMARY KEY,
ProductName NVARCHAR(100),
[CALENDAR YEAR 1] FLOAT,
[CALENDAR YEAR 2] FLOAT,
[CALENDAR YEAR 3] FLOAT,
[CALENDAR YEAR 4] FLOAT,
ETL_LOAD_DATE DATETIME, 
ETL_UPD_DATE DATETIME
)


SELECT * FROM dimPRODUCT_TABLE


UPDATE dimPRODUCT_TABLE
SET
[CALENDAR YEAR 1]  = ?,
[CALENDAR YEAR 2]  = ?,
[CALENDAR YEAR 3]  = ?,
[CALENDAR YEAR 4]  = ?,
ETL_UPD_DATE  =  GETDATE()
WHERE
ProductID = ?


SELECT COUNT(*) AS RCOUNT FROM dimPRODUCT_TABLE

